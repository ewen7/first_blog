<div class='row'>
	<div class='col col-sm-10'>
		<h1>Posts</h1>
		<% @posts.each do |post| %>
		 <div class='panel panel-default'> 
		    <div class='panel-heading'>
		    	<div class='row'>
		    		<div class='col col-xs-1'>
		    			<%= image_tag current_user.avatar.url, class: 'avatar' %> <br>
		    			<strong><%= link_to post.user.username, user_posts_path(name: post.user.username)%></strong> 
		    		</div>
		    		<div class='col col-xs-11'>
		    			<h3><%=post.title%></h3>
		    		</div>
		    	</div>
		    </div>
		    <div class='panel-body'><%= post.blog_entry %></div>
		    <div class='panel-footer'>
		    	<i>Created At:</i>  <%= post.created_at.strftime('%w:%M %p %Z %b %e, %Y') %>
		    	<p><i>Updated At:</i> <%= post.updated_at.strftime('%w:%M %p %Z %b %e, %Y') %></p>
		    	<div class='row'>
		    		<div class='col col-xs-4' style='text-align:center'>
		    			<%= link_to 'Show', post, class:'btn btn-primary' %>  
		    		</div>
		    		<div class='col col-xs-4' style='text-align:center'>
		    			<%= link_to 'Edit', edit_post_path(post),class:'btn btn-warning' %>
		    		</div>
		    		<div class='col col-xs-4' style='text-align:center'>
		    			<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
		    		</div>
		    	</div>
		    </div>  
		  </div>
		<% end %>
		<%= paginate @posts, window:2 %><br>
		<%= link_to 'New Post', new_post_path, class:'btn btn-success' %>

	</div>
	<div class='col col-sm-2'>
		<h1> Users </h1>
		<div class='panel panel-default'>
			<div class='panel-body'>
				<% @users.each do |user| %>
					<%= image_tag user.avatar.url, class: 'avatar' %> <br>
					<strong><%= link_to user.username, user_posts_path(name: user.username) %></strong> <br>
				<% end %>
			</div>
		</div>
	</div>
</div>