<div class='row'>
	<div class='col col-sm-10'>
		<h1>Posts</h1>
		<div class='card-columns'>
			<% @posts.each do |post| %>
				<div class="card">
					<div class="card-header">
						<div class='col col-xs-1'>
			    			<%= image_tag current_user.avatar.url, class: 'avatar' %> <br>
			    			<strong><%= link_to post.user.username, user_posts_path(name: post.user.username)%></strong> 
			    		</div>
			    		<div class='col col-xs-11'>
			    			<h3><%=post.title%></h3>
			    		</div>
					</div>
				    <div class="card-body">
				      <p class="card-text"><%= post.blog_entry %></p>
				      <p class="card-text"><small class="text-muted"><i>Created At:</i>  <%= post.created_at.strftime('%w:%M %p %Z %b %e, %Y') %> <i>Updated At:</i> <%= post.updated_at.strftime('%w:%M %p %Z %b %e, %Y') %></small></p>
				    </div>
				    <div class="card-footer">
				    	<div class='col col-xs-4' style='text-align:center'>
			    			<%= link_to 'Show', post, class:'btn btn-primary' %>  
			    		</div>
			    		<div class='col col-xs-4' style='text-align:center'>
			    			<%= link_to 'Edit', edit_post_path(post),class:'btn btn-warning' %>
			    		</div>
			    		<div class='col col-xs-4' style='text-align:center'>
			    			<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
			    		</div>
				    </div>
				</div>
			<% end %>
		</div>
		<%= paginate @posts, window:2 %><br>
		<%= link_to 'New Post', new_post_path, class:'btn btn-success' %>

	</div>
	<div class='col col-sm-2'>
		<h1> Users </h1>
		<div class="card-deck">
			<% @users.each do |user| %>
				<div class="card text-center">
		    		<%= image_tag user.avatar.url, class: 'avatar card-img-top' %>
		    		<div class="card-body">
		    			<strong><%= link_to user.username, user_posts_path(name: user.username), class: 'card-title' %></strong>
		    		</div>
		    	</div>
	    	<% end %>
	    </div>
  	</div>
</div>